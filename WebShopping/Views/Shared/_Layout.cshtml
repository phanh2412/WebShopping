
@using WebShopping.Models
@{

    khach nguoidung = (khach)HttpContext.Current.Session["NguoiDungSession"];

}

<!DOCTYPE html>
<html lang="vi">

<head>

    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>TinaFlower - Thế giới hoa hồng sáp</title>
    <meta name="robots" content="noindex, follow" />
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="/Content/assets/css/vendor/font-awesome.min.css" />
    <link rel="stylesheet" href="/Content/assets/css/vendor/Pe-icon-7-stroke.css" />

    <!-- Plugin CSS (Global Plugins Files) -->
    <link rel="stylesheet" href="/Content/assets/css/plugins/animate.min.css">
    <link rel="stylesheet" href="/Content/assets/css/plugins/jquery-ui.min.css">
    <link rel="stylesheet" href="/Content/assets/css/plugins/swiper-bundle.min.css">
    <link rel="stylesheet" href="/Content/assets/css/plugins/nice-select.css">
    <link rel="stylesheet" href="/Content/assets/css/plugins/magnific-popup.min.css" />

    <!-- Style CSS -->
    <link rel="stylesheet" href="/Content/assets/css/style.css">
    @RenderSection("styles",false)
</head>

<body>
    <div class="main-wrapper">
        <!-- Begin Main Header Area -->
        <header class="main-header_area position-relative">
            <div class="header-middle py-5">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-lg-12">
                            <div class="header-middle-wrap">
                                <a href="/home/index" class="header-logo"><img src="/Content/assets/images/logo/logo1.png" alt="Header Logo"></a>
                                <div class="header-search-area d-none d-lg-block">
                                    <div class="header-searchbox">
                                        <input id="keyword" class="input-field" type="text" placeholder="Tìm kiếm sản phẩm">
                                        <button class="btn btn-outline-whisper btn-primary-hover" type="submit" onclick="searchProduct();"><i class="pe-7s-search"></i></button>
                                    </div>
                                </div>
                                <div class="header-right">
                                    <ul>
                                        <li class="dropdown d-none d-md-block">
                                            <button class="btn btn-link dropdown-toggle ht-btn p-0" type="button" id="settingButton" data-bs-toggle="dropdown" aria-expanded="false">
                                                <i class="pe-7s-users"></i>
                                            </button>
                                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="settingButton">
                                                @{
                                                    if (nguoidung == null)
                                                    {
                                                        <li><a class="dropdown-item" href="/user/login">Đăng nhập | Đăng ký</a></li>
                                                    }
                                                    else
                                                    {
                                                        <li><a class="dropdown-item" href="/user/index"><b>@nguoidung.HoVaTen</b></a></li>
                                                        <li><a class="dropdown-item" href="/user/logout">Đăng xuất</a></li>
                                                        
                                                    }
                                                }


                                            </ul>
                                        </li>
                                        <li class="d-block d-lg-none">
                                            <a href="#searchBar" class="search-btn toolbar-btn">
                                                <i class="pe-7s-search"></i>
                                            </a>
                                        </li>
                                        <li class="minicart-wrap me-3 me-lg-0">
                                            <a href="/cart/" class="minicart-btn toolbar-btn">
                                                <i class="pe-7s-shopbag"></i>
                                                <span id="cart-count" class="quantity" style="display:none;"></span>
                                            </a>
                                        </li>
                                        <li class="mobile-menu_wrap d-block d-lg-none">
                                            <a href="#mobileMenu" class="mobile-menu_btn toolbar-btn pl-0">
                                                <i class="pe-7s-menu"></i>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="main-header header-sticky" data-bg-color="#bac34e">
                <div class="container">
                    <div class="main-header_nav position-relative">
                        <div class="row align-items-center">
                            <div class="col-lg-12 d-none d-lg-block">
                                <div class="main-menu">
                                    <nav class="main-nav">
                                        <ul>
                                            <li class="drop-holder"><a href="/home/index">Trang chủ</a></li>
                                            <li><a href="/product/index">Sản phẩm</a></li>
                                            <li><a href="/home/huongdanthanhtoan">Hướng dẫn thanh toán</a></li>
                                            <li><a href="/home/contact">Liên hệ</a></li>
                                        </ul>
                                    </nav>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="mobile-menu_wrapper" id="mobileMenu">
                <div class="harmic-offcanvas-body">
                    <div class="inner-body">
                        <div class="harmic-offcanvas-top">
                            <a href="#" class="button-close"><i class="pe-7s-close"></i></a>
                        </div>
                        <div class="offcanvas-user-info text-center px-6 pb-5">
                            <div class=" text-silver">
                                <p class="shipping mb-0">Chào mừng bạn đến với <span>TinaFlowers</span></p>
                            </div>
                            <ul class="dropdown-wrap justify-content-center text-silver">
                                <li class="dropdown dropup">
                                    <button class="btn btn-link dropdown-toggle ht-btn p-0" type="button" id="settingButtonTwo" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="pe-7s-users"></i>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="settingButtonTwo">
                                        @{
                                            if (nguoidung == null)
                                            {
                                                <li><a class="dropdown-item" href="/user/login">Đăng nhập | Đăng ký</a></li>
                                            }
                                            else
                                            {
                                                <li><a class="dropdown-item" href="/user/index">Tài khoản của tôi</a></li>
                                            }
                                        }
                                    </ul>
                                </li>
                            </ul>
                        </div>
                        <div class="offcanvas-menu_area">
                            <nav class="offcanvas-navigation">
                                <ul class="mobile-menu">
                                    <li><a href="/home/index"><span class="mm-text">Trang chủ</span></a></li>
                                    <li><a href="/product/index"><span class="mm-text">Sản phẩm</span></a></li>
                                    <li><a href="/home/huongdanthanhtoan"><span class="mm-text">Hướng dẫn thanh toán</span></a></li>
                                    <li><a href="/home/contact"><span class="mm-text">Liên hệ</span></a></li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
            <div class="offcanvas-search_wrapper" id="searchBar">
                <div class="harmic-offcanvas-body">
                    <div class="container h-100">
                        <div class="offcanvas-search">
                            <div class="harmic-offcanvas-top">
                                <a href="#" class="button-close"><i class="pe-7s-close"></i></a>
                            </div>
                            <span class="searchbox-info">Bắt đầu nhập và nhấn Enter để tìm kiếm</span>
                            <div action="#" class="hm-searchbox">
                                <input type="text" placeholder="Tìm kiếm">
                                <button class="search-btn" type="submit"><i class="pe-7s-search"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="global-overlay"></div>
        </header>

        <!-- Main Header Area End Here -->
        @RenderBody()

        <!-- Begin Footer Area -->
        @Html.Partial("_FooterPartialView")

    </div>

    <script src="/Content/assets/js/vendor/bootstrap.bundle.min.js"></script>
    <script src="/Content/assets/js/vendor/jquery-3.5.1.min.js"></script>
    <script src="/Content/assets/js/vendor/jquery-migrate-3.3.0.min.js"></script>
    <script src="/Content/assets/js/vendor/modernizr-3.11.2.min.js"></script>
    <script src="/Content/assets/js/vendor/jquery.waypoints.js"></script>

    <!--Plugins JS-->
    <script src="/Content/assets/js/plugins/wow.min.js"></script>
    <script src="/Content/assets/js/plugins/jquery-ui.min.js"></script>
    <script src="/Content/assets/js/plugins/swiper-bundle.min.js"></script>
    <script src="/Content/assets/js/plugins/jquery.nice-select.js"></script>
    <script src="/Content/assets/js/plugins/parallax.min.js"></script>
    <script src="/Content/assets/js/plugins/jquery.magnific-popup.min.js"></script>

    <!--Main JS (Common Activation Codes)-->
    <script src="/Content/assets/js/main.js"></script>
    <script src="/Scripts/helper.js"></script>

    <script>
        var CountItemInCart = function () {
            $.get('/cart/CountItemInCart', function (rs) {
                if (GetObjectProperty(rs, 'status') === Enum.ResponseStatus.SUCCESS) {
                    if (GetObjectProperty(rs, 'data') !== '') {
                        if (rs.data > 0) {
                            $('#cart-count').text(GetObjectProperty(rs, 'data'));
                            $('#cart-count').show();
                        } else {
                            $('#cart-count').hide();
                        }
                        
                    }
                }
            });
        }

        var AddToCart = function (el) {
            const sanPhamId = $(el).data('id');
            let quantityAddToCart = $('#quantity-add-to-cart').val();
            if (quantityAddToCart === '' || quantityAddToCart === null || typeof quantityAddToCart === 'undefined') quantityAddToCart = 1;

            $.get('/cart/AddToCart?sanPhamId=' + sanPhamId + '&soLuong=' + quantityAddToCart, function (rs) {
                if (GetObjectProperty(rs, 'status') === Enum.ResponseStatus.UNAUTHEN) {
                    window.location.href = '/user/login';
                }else   if (GetObjectProperty(rs, 'status') === Enum.ResponseStatus.SUCCESS) {
                    CountItemInCart();
                }
            });
        }
        function searchProduct() {
            let keyword = $('#keyword').val();
            window.location.href = '/product/index?key=' + keyword;
        }


    </script>
    @if (nguoidung != null)
    { 
    <script>CountItemInCart();</script>
    }

    @RenderSection("scripts", false)
</body>

</html>

