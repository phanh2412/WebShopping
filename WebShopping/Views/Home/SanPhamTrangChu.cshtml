@model IEnumerable<WebShopping.Models.san_pham>
<!-- Begin Product Area -->
<div class="product-area section-space-top-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="all-items" role="tabpanel" aria-labelledby="all-items-tab">
                        <div class="product-item-wrap row">
                            @foreach (var sp in Model)
                            {
                                <div class="col-xl-3 col-lg-4 col-sm-6">
                                    <div class="product-item">
                                        <div class="product-img img-zoom-effect">
                                            <a href="/product/detail?id=@sp.SanPhamId">
                                                <img class="img-full" src="@sp.AnhDaiDien" alt="Product Images">
                                            </a>
                                            <div class="product-add-action">
                                                <ul>
                                                    <li>
                                                        <a onclick="AddToCart(this);" data-id="@sp.SanPhamId">
                                                            <i class="pe-7s-cart"></i>
                                                        </a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                        <div class="product-content">
                                            <a class="product-name" href="/product/detail?id=@sp.SanPhamId">@sp.TenSanPham</a>
                                            <div class="price-box pb-1">
                                                <span class="new-price">@String.Format("{0:0,0}", sp.Gia) VNĐ</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Product Area End Here -->
