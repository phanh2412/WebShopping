@using WebShopping.Models

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

    List<san_pham> listSanPham = (List<san_pham>)ViewBag.DanhSach;
    int TongSoTrang = (int)ViewBag.TongSoTrang;
    int TrangHienTai = (int)ViewBag.TrangHienTai;
    int? DanhMucId = (int?)ViewBag.DanhMucId; 

    List<danh_muc_san_pham> listDanhMuc = (List<danh_muc_san_pham>)ViewBag.DanhMuc;


}
<!-- Begin Main Content Area -->
<main class="main-content">
    <div class="breadcrumb-area breadcrumb-height" style="background-image: url('/Content/assets/images/banner/bg2.jpg')">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-lg-12">
                    <div class="breadcrumb-item">
                        <h2 class="breadcrumb-heading">Sản phẩm</h2>
                        <ul>
                            <li>
                                <a href="/home/index">Trang chủ<i class="pe-7s-angle-right"></i></a>
                            </li>
                            <li>Sản phẩm</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="shop-area section-space-y-axis-100">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 order-lg-1 order-2 pt-10 pt-lg-0">
                    <div class="sidebar-area">

                        <div class="widgets-area mb-9">
                            <h2 class="widgets-title mb-5" style="color: lightcoral;">Danh mục</h2>
                            <div class="widgets-item">
                                <ul class="widgets-checkbox">
                                    @foreach (var dm in listDanhMuc)
                                    {
                                        <li>

                                            <label class="label-checkbox mb-0" for="refine-item">
                                                <a href="/product/index?id=@dm.DanhMucSanPhamId">@dm.TenDanhMucSanPham</a>
                                            </label>
                                        </li>
                                    }

                                </ul>
                            </div>
                        </div>
                        <div class="widgets-area widgets-filter mb-9">
                            <h2 class="widgets-title mb-5" style="color: lightcoral;">Giá</h2>
                            <div class="price-filter">
                                <div id="slider-range"></div>
                                <div class="price-slider-amount">
                                    <button class="btn btn-primary btn-secondary-hover">Lọc</button>
                                    <div class="label-input position-relative">
                                        <label>Giá : </label>
                                        <input type="text" id="amount" name="price" placeholder="Add Your Price" />
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="col-lg-9 order-lg-2 order-1">
                    <div class="tab-content text-charcoal pt-8">
                        <div class="tab-pane fade show active" id="grid-view" role="tabpanel" aria-labelledby="grid-view-tab">
                            <div class="product-grid-view row">
                                @foreach (var sp in listSanPham)
                                {
                                    <div class="col-lg-4 col-sm-6">
                                        <div class="product-item">
                                            <div class="product-img img-zoom-effect">
                                                <a href="single-product.html">
                                                    <img class="img-full" src="~/Content/assets/images/@sp.AnhDaiDien" alt="Product Images">
                                                </a>
                                                <div class="product-add-action">
                                                    <ul>
                                                        <li>
                                                            <a href="cart.html">
                                                                <i class="pe-7s-cart"></i>
                                                            </a>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </div>
                                            <div class="product-content">
                                                <a class="product-name" href="single-product.html">@sp.TenSanPham</a>
                                                <div class="price-box pb-1">
                                                    <span class="new-price">@String.Format("{0:0,0}", sp.Gia) VNĐ</span>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                }

                            </div>
                        </div>
                    </div>

                    <div class="pagination-area pt-10">
                        <nav aria-label="Page navigation example">
                            <ul class="pagination justify-content-center">
                                @{
                                    for (int indexPage = 1; indexPage <= TongSoTrang; indexPage++)
                                    {
                                        <li class="page-item @(TrangHienTai == indexPage ? "active":"")"><a class="page-link" href="/product/index?page=@indexPage&&id=@DanhMucId">@indexPage</a></li>
                                    }
                                }


                            </ul>
                        </nav>
                    </div>

                </div>
            </div>
        </div>
    </div>

</main>
<!-- Main Content Area End Here -->